@model List<CheeseMVC.Models.Cheese>

<h1>@ViewBag.Title</h1>

<!--p2-Update the table-->
<table class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Category</th>
    </tr>

    @foreach (var cheese in Model)
    {
        <tr>
            <td>@cheese.Name</td>
            <td>@cheese.Description</td>
            <td>@cheese.Category.Name</td>
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>Add a Cheese to Display the Current List</p>
}

<p><a asp-controller="Cheese" asp-action="Add">Add to Cheese List</a></p>
